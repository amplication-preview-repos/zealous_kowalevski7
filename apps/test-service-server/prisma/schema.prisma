datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Test {
  id          String     @id @default(cuid())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  name        String?
  description String?
  userTests   UserTest[]
  questions   Question[]
}

model Question {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  text          String?
  correctAnswer String?
  test          Test?    @relation(fields: [testId], references: [id])
  testId        String?
}

model UserTest {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  score     Int?
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
  test      Test?    @relation(fields: [testId], references: [id])
  testId    String?
}

model User {
  id        String     @id @default(cuid())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  firstName String?
  lastName  String?
  username  String     @unique
  email     String?    @unique
  password  String
  roles     Json
  userTests UserTest[]
}
